@using JobFindingWebsite.Data.Enum;
@using JobFindingWebsite.ViewModels;
@model RegisterCompanyViewModel

@{
    ViewData["Title"] = "Register Company";
}

<head>
    <link rel="stylesheet" href="/css/registerstyle.css">
</head>

<br />
<body>
    <div class="myForm-wrapper">
        <div class="title">
            Register Form
        </div>
        <form asp-action="RegisterCompany" method="post">
            <div class="myForm-field">
                <input asp-for="Email" type="text" class="form-control" required>
                <label asp-for="Email">Email Address</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="myForm-field">
                <select asp-for="CompanyType" asp-items="@Html.GetEnumSelectList<CompanyType>()" required>
                    <option value="" disabled selected hidden>Company Industry</option>
                </select>
                <label asp-for="CompanyType">Company Industry</label>
                <span asp-validation-for="CompanyType" class="text-danger"></span>
            </div>
            <div class="myForm-field">
                <input asp-for="NumberOfEmployees" class="form-control" required>
                <label asp-for="NumberOfEmployees">Employees number</label>
                <span asp-validation-for="NumberOfEmployees" class="text-danger"></span>
            </div>
            <div class="myForm-field">
                <input asp-for="Password" type="password" class="form-control" required>
                <label asp-for="Password">Password</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="myForm-field">
                <input asp-for="ConfirmPassword" type="password" class="form-control" required>
                <label asp-for="ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="myForm-content">
                <div class="myForm-checkbox">
                    <input type="checkbox" id="remember-me">
                    <label for="remember-me">Remember me</label>
                </div>
                <div class="myForm-pass-link">
                    <a href="#">Forgot password?</a>
                </div>
            </div>
            <div class="myForm-field">
                <input type="submit" value="Register" class="btn custom-button">
            </div>
            <div class="myForm-pass-link" style="text-align: center; margin-top: 10px; font-size: 16.5px">
                <a asp-controller="Account" asp-action="Login">Have an account? Sign In</a>
            </div>
        </form>
    </div>
</body>

